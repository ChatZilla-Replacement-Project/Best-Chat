<local:VisualPrefsTabCtrl
	x:Class="BestChat.Platform.Prefs.Ctrls.PrefsGenericTreeListerPage"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:local="clr-namespace:BestChat.Platform.Prefs.Ctrls"
	xmlns:data="clr-namespace:BestChat.Platform.Prefs.Data;assembly=BestChat.Platform.Prefs.Data"
	d:DataContext="{d:DesignInstance Type=data:AbstractChildMgr}"
	mc:Ignorable="d">
	<Grid>
		<Grid.ColumnDefinitions>
			<ColumnDefinition
				Width="Auto" />
		</Grid.ColumnDefinitions>
		<Grid.RowDefinitions>
			<RowDefinition
				Height="Auto" />
			<RowDefinition
				Height="4" />
			<RowDefinition
				Height="Auto" />
		</Grid.RowDefinitions>
		<local:InfoOnThisPageTextBlock
			Text="{Binding LocalizedName}" />
		<local:PrefGroupTreeListerCtrl
			Grid.Row="2"
			Children="{Binding Children, RelativeSource={RelativeSource AncestorType=local:PrefsGenericTreeListerPage}}" />
	</Grid>
</local:VisualPrefsTabCtrl>