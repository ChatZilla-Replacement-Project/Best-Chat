<UserControl
	x:Class="BestChat.Prefs.Ctrls.Global"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:local="clr-namespace:BestChat.Prefs.Ctrls"
	xmlns:Ctrls="clr-namespace:BestChat.GUI.Ctrls;assembly=BestChat.GUI.Ctrls"
	xmlns:Base="clr-namespace:BestChat.Platform.Prefs.Ctrls;assembly=BestChat.Platform.Prefs.Ctrls"
	xmlns:CalcBinding="clr-namespace:CalcBinding;assembly=CalcBinding"
	xmlns:IrcView="clr-namespace:BestChat.IRC.General.View;assembly=BestChat.IRC.General.View"
	mc:Ignorable="d"
	Width="800">
	<ScrollViewer>
		<TabControl
			x:Name="sheetUs">
			<TabItem
				Header="_General"
				IsTabStop="False"
				ToolTip="Contains various settings that don't belong elsewhere">
				<Grid>
					<Grid.ColumnDefinitions>
						<ColumnDefinition />
					</Grid.ColumnDefinitions>
					<Grid.RowDefinitions>
						<RowDefinition
							Height="Auto" />
						<RowDefinition
							Height="4" />
						<RowDefinition
							Height="Auto" />
						<RowDefinition
							Height="4" />
						<RowDefinition
							Height="Auto" />
						<RowDefinition
							Height="4" />
						<RowDefinition
							Height="Auto" />
						<RowDefinition
							Height="4" />
						<RowDefinition
							Height="Auto" />
					</Grid.RowDefinitions>
					<GroupBox
						Header="_Connection">
						<Grid>
							<Grid.ColumnDefinitions>
								<ColumnDefinition
									Width="Auto" />
								<ColumnDefinition
									Width="4" />
								<ColumnDefinition
									Width="Auto" />
								<ColumnDefinition
									Width="4" />
								<ColumnDefinition
									Width="Auto" />
								<ColumnDefinition
									Width="4" />
								<ColumnDefinition
									Width="Auto"
									MinWidth="100" />
								<ColumnDefinition
									Width="*" />
							</Grid.ColumnDefinitions>
							<Grid.RowDefinitions>
								<RowDefinition
									Height="Auto" />
								<RowDefinition
									Height="4" />
								<RowDefinition
									Height="Auto" />
								<RowDefinition
									Height="4" />
								<RowDefinition
									Height="Auto" />
								<RowDefinition
									Height="4" />
								<RowDefinition
									Height="Auto" />
								<RowDefinition
									Height="4" />
								<RowDefinition
									Height="Auto" />
								<RowDefinition
									Height="4" />
								<RowDefinition
									Height="Auto" />
								<RowDefinition
									Height="4" />
								<RowDefinition
									Height="Auto" />
							</Grid.RowDefinitions>
							<Ctrls:ResetPrefBtn
								x:Name="btnGeneralConnectionEnableIdentServerReset" />
							<CheckBox
								x:Name="chkGeneralConnectionEnableIdentServer"
								Content="Enable _Identification Server during connection process"
								Grid.ColumnSpan="6"
								ToolTip="Allows Best Chat to connect to servers that require an ident response"
								Grid.Column="2" />
							<Ctrls:ResetPrefBtn
								x:Name="btnGeneralConnectionReconnect"
								Grid.Row="2" />
							<CheckBox
								x:Name="chkGeneralConnectionReconnect"
								Content="Reconnect when disconnected unexpectedly"
								Grid.Row="2"
								Grid.ColumnSpan="6"
								Grid.Column="2"
								ToolTip="When your connection is lost unexpectedly, Best Chat can automatically reconnect to the server for you." />
							<Ctrls:ResetPrefBtn
								x:Name="btnGeneralConnectionAutoRejoinReset"
								Grid.Row="4" />
							<CheckBox
								x:Name="chkGeneralConnectionAutoRejoin"
								Content="R_ejoin when kicked"
								Grid.Row="4"
								Grid.ColumnSpan="6"
								Grid.Column="2"
								ToolTip="If this is turned on, Best Chat will try (only once) to rejoin a channel you got kicked from.  Note: Some channels dislike auto-rejoin and will ban you.  So be careful." />
							<Ctrls:ResetPrefBtn
								x:Name="btnGeneralConnectionCharEncodingReset"
								Grid.Row="6" />
							<Label
								Content="C_haracter Encoding: "
								Grid.Row="6"
								HorizontalContentAlignment="Right"
								VerticalContentAlignment="Center"
								Grid.Column="2" />
							<TextBox
								x:Name="editGeneralConnectionCharEncoding"
								Grid.Row="6"
								Grid.Column="4"
								Grid.ColumnSpan="4"
								ToolTip="For multiple clients to correctly read messages with non-ASCII characters on IRC, they need to use the same character encoding." />
							<Ctrls:ResetPrefBtn
								x:Name="btnMaxConnAttemptsReset"
								Grid.Row="8" />
							<Label
								Content="Maximum Connection _Attempts:"
								Grid.Row="8"
								HorizontalContentAlignment="Right"
								ToolTip="{Binding ToolTip, ElementName=iudMaxConnectionAttempts}"
								VerticalContentAlignment="Center"
								Grid.Column="2" />
							<CheckBox
								x:Name="chkGeneralConnectUnlimited"
								Content="Unlimited Attempts?"
								Grid.Row="8"
								Grid.Column="4"
								VerticalContentAlignment="Center"
								ToolTip="If checked, Best Chat will attempt to reconnect to any server forever.  If unchecked, the limit will be to the right." />
							<Ctrls:IntegerUpDown
								x:Name="iudMaxConnectionAttempts"
								Grid.Row="8"
								Grid.Column="6"
								Minimum="1"
								Value="1"
								ToolTip="This is number of times Best Chat attempts to connect to a server or network.  A value of 1 means Best Chat will never attempt to reconnect to the server." />
							<Ctrls:ResetPrefBtn
								x:Name="btnGeneralConnectionDefQuitMsgReset"
								Grid.Row="10" />
							<Label
								Content="Default Quit _Message: "
								Grid.Row="10"
								HorizontalContentAlignment="Right"
								VerticalContentAlignment="Center"
								ToolTip="{Binding ToolTip, ElementName=editDefQuitMessage}"
								Grid.Column="2" />
							<TextBox
								x:Name="editDefQuitMessage"
								Grid.Column="4"
								Grid.Row="10"
								Grid.ColumnSpan="4">
								<TextBox.ToolTip>
									<TextBlock>Specifies a default quit message to use when on is not explicitly specified for a network or via the
													<Span
											FontFamily="Courier New">/quit</Span> command.</TextBlock>
								</TextBox.ToolTip>
							</TextBox>
							<Ctrls:ResetPrefBtn
								x:Name="btnGeneralConnectionProxyTypeReset"
								Grid.Row="14" />
							<Label
								Content="_Proxy Type: "
								Grid.Row="14"
								HorizontalContentAlignment="Right"
								VerticalContentAlignment="Center"
								ToolTip="{Binding ToolTip, ElementName=editProxyType}"
								Grid.Column="2" />
							<TextBox
								x:Name="editProxyType"
								Grid.Row="14"
								Grid.Column="6"
								Grid.ColumnSpan="4"
								ToolTip="Override the normal proxy choice by specifying “HTTP” to use your browser's HTTP proxy or “none” to force no proxy to be used (not even the SOCKS proxy).  Note that this usually works only when the browser is set to use a manual proxy configuration." />
						</Grid>
					</GroupBox>
					<GroupBox
						Header="Identification"
						Grid.Row="2">
						<Grid>
							<Grid.ColumnDefinitions>
								<ColumnDefinition
									Width="Auto" />
								<ColumnDefinition
									Width="4" />
								<ColumnDefinition
									Width="Auto" />
								<ColumnDefinition
									Width="4" />
								<ColumnDefinition
									Width="Auto"
									MinWidth="100" />
								<ColumnDefinition
									Width="4" />
								<ColumnDefinition />
							</Grid.ColumnDefinitions>
							<Grid.RowDefinitions>
								<RowDefinition
									Height="Auto" />
								<RowDefinition
									Height="4" />
								<RowDefinition
									Height="Auto" />
								<RowDefinition
									Height="4" />
								<RowDefinition
									Height="Auto" />
								<RowDefinition
									Height="4" />
								<RowDefinition
									Height="Auto" />
								<RowDefinition
									Height="4" />
								<RowDefinition
									Height="Auto" />
								<RowDefinition
									Height="4" />
								<RowDefinition
									Height="Auto" />
								<RowDefinition
									Height="4" />
								<RowDefinition
									Height="Auto" />
							</Grid.RowDefinitions>
							<Label
								Content="Auto-away _Message: "
								HorizontalContentAlignment="Right"
								ToolTip="{Binding ToolTip, ElementName=editAutoAwayMsg}" />
							<TextBox
								x:Name="editAutoAwayMsg"
								Grid.Column="2"
								Grid.ColumnSpan="5"
								ToolTip="The away message ChatZilla will use when you go away" />
							<Label
								Content="Auto-away _Timeout: "
								Grid.Row="2"
								HorizontalContentAlignment="Right"
								ToolTip="{Binding ToolTip, ElementName=iudAutoAwayTimeout}" />
							<CheckBox
								x:Name="chkAutoAwayEnabled"
								Content="Enabled?"
								Grid.Row="2"
								Grid.Column="2" />
							<Ctrls:IntegerUpDown
								x:Name="iudAutoAwayTimeout"
								Grid.Row="2"
								Grid.Column="4"
								ToolTip="After how many minutes of inactivity Best Chat will set your status to &quot;away&quot;."
								Value="10"
								Minimum="10"
								IsEnabled="{Binding IsChecked, ElementName=chkAutoAwayEnabled}" />
							<Label
								Content="seconds"
								Grid.Row="2"
								Grid.Column="5" />
							<Label
								Content="_Real Name: "
								Grid.Row="4"
								HorizontalContentAlignment="Right"
								ToolTip="{Binding ToolTip, ElementName=editRealName}" />
							<TextBox
								x:Name="editRealName"
								Grid.Row="4"
								Grid.Column="2"
								Grid.ColumnSpan="5"
								ToolTip="This is your real name that others who do a /whois or /whowas on you will see.  It's commonly used to include one's real name, but you aren't required to enter anything."></TextBox>
							<Label
								Content="Default _Nick: "
								Grid.Row="6"
								HorizontalContentAlignment="Right"
								ToolTip="{Binding ToolTip, ElementName=editDefNick}" />
							<TextBox
								x:Name="editDefNick"
								Grid.Row="6"
								Grid.Column="2"
								Grid.ColumnSpan="5"
								ToolTip="This is the name seen by everyone else on IRC.  You can use anything you like, but it can't contain particularly &quot;weird&quot; characters so keep it to alpha-numeric characters, dashes, underscores, and pipes." />
							<Label
								Content="Default Nick (_Away): "
								Grid.Row="8"
								HorizontalContentAlignment="Right"
								ToolTip="{Binding ToolTip, ElementName=editDefNickAway}" />
							<TextBox
								x:Name="editDefNickAway"
								Grid.Row="8"
								Grid.Column="2"
								Grid.ColumnSpan="5"
								ToolTip="This nickname will automatically be used when you mark yourself away if different from your normal nickname.  You may leave this blank to not change nicknames when you're away." />
							<Label
								Content="_User Modes to Request"
								Grid.Row="10"
								ToolTip="{Binding ToolTip, ElementName=editRequestedUserModes}" />
							<TextBox
								x:Name="editRequestedUserModes"
								HorizontalContentAlignment="Stretch"
								VerticalContentAlignment="Stretch"
								Grid.Row="10"
								Grid.Column="2"
								Grid.ColumnSpan="5"
								ToolTip="Your usermode is an option string that's sent to the IRC network.  It's composed of a plus sign (&quot;+&quot;) followed by one or more letters, each of which represents an option.  The letter &quot;i&quot; represents &quot;invisible mode&quot;.  When you're invisible, your nickname won't appear in channel user lists for people who aren't in the channel with you.  The letter &quot;s&quot; allows you to see server messages like nickname collisions.  For a more complete list of available options, look up &quot;usermode&quot; on www.irc.help.org or contact your network's staff." />
							<Label
								Content="User _Name"
								Grid.Row="12"
								ToolTip="{Binding ToolTip, ElementName=editUserName}" />
							<TextBox
								x:Name="editUserName"
								Grid.Row="12"
								Grid.Column="2"
								Grid.ColumnSpan="5"
								ToolTip="Your user name is used to construct your &quot;host mask&quot; which is a string representing you.  It includes your connection's host name and this user name.  It's sometimes used for setting auto-op, bans, and other things specific to one person." />
						</Grid>
					</GroupBox>
					<GroupBox
						Header="_Logging"
						Grid.Row="4">
						<Grid>
							<Grid.ColumnDefinitions>
								<ColumnDefinition
									Width="Auto" />
								<ColumnDefinition
									Width="4" />
								<ColumnDefinition />
							</Grid.ColumnDefinitions>
							<Grid.RowDefinitions>
								<RowDefinition
									Height="Auto" />
								<RowDefinition
									Height="4" />
								<RowDefinition
									Height="Auto" />
							</Grid.RowDefinitions>
							<CheckBox
								x:Name="checkBox"
								Content="Log Views by Default"
								ToolTip="Makes log views by default.  The log file is usually stored in your profile.  However, the location can be overridden with the box below." />
							<Label
								Content="Root folder for logs:"
								Grid.Row="2"
								IsEnabled="{Binding IsEnabled, ElementName=folderBrowserCtrl, NotifyOnSourceUpdated=True}"
								ToolTip="{Binding ToolTip, ElementName=folderBrowserCtrl}" />
							<Ctrls:FolderBrowserCtrl
								x:Name="folderBrowserCtrl"
								Grid.Row="2"
								Grid.Column="2"
								IsEnabled="{Binding IsChecked, ElementName=checkBox, NotifyOnSourceUpdated=True}"
								ToolTip="Specifies the base location for all logs.  The various &quot;Log file for&quot; preferences specify exact names for the different types of log file." />
						</Grid>
					</GroupBox>
					<GroupBox
						Header="Message _Notifications"
						Grid.Row="6">
						<Grid>
							<Grid.RowDefinitions>
								<RowDefinition
									Height="Auto" />
								<RowDefinition
									Height="4" />
								<RowDefinition
									Height="Auto" />
								<RowDefinition
									Height="4" />
								<RowDefinition
									Height="Auto" />
								<RowDefinition
									Height="4" />
								<RowDefinition
									Height="Auto" />
								<RowDefinition
									Height="4" />
								<RowDefinition
									Height="Auto" />
							</Grid.RowDefinitions>
							<CheckBox
								x:Name="chkGeneralAlertChanChat"
								Content="Alert for Channel Chat"
								ToolTip="Show message notifications for normal chat messages.  It may be annoying for high traffic channels.  Suggested for moderators or low traffic channels." />
							<CheckBox
								x:Name="chkGeneralAlertChanEvt"
								Content="Alert for Channel Event"
								Grid.Row="2"
								ToolTip="Shows message notifications for joins, parts, kicks, user mode changes, and any other system messages.  It may be annoying for high traffic channels.  Suggested for moderators or low traffic channels." />
							<CheckBox
								x:Name="chkGeneralAlertChanStalk"
								Content="Alert for Channel Stalk"
								Grid.Row="4"
								ToolTip="Shows message notifications for messages containing stalk words including your nickname." />
							<CheckBox
								x:Name="chkGeneralAlertUserChat"
								Content="Alert for User Chat"
								Grid.Row="6"
								ToolTip="Shows message notifications for private messages." />
							<CheckBox
								x:Name="chkGeneralAlertShowPopups"
								Content="Show Popups"
								Grid.Row="8"
								ToolTip="When enabled, popups are shown for views." />
						</Grid>
					</GroupBox>
					<GroupBox
						Header="_Sound Events"
						Grid.Row="8">
						<Grid>
							<Grid.ColumnDefinitions>
								<ColumnDefinition />
								<ColumnDefinition
									Width="4" />
								<ColumnDefinition
									Width="Auto" />
							</Grid.ColumnDefinitions>
							<Grid.RowDefinitions>
								<RowDefinition
									Height="Auto" />
								<RowDefinition
									Height="4" />
								<RowDefinition
									Height="Auto" />
								<RowDefinition
									Height="4" />
								<RowDefinition
									Height="Auto" />
								<RowDefinition
									Height="4" />
								<RowDefinition
									Height="Auto" />
								<RowDefinition
									Height="4" />
								<RowDefinition
									Height="Auto" />
								<RowDefinition
									Height="4" />
								<RowDefinition
									Height="Auto" />
								<RowDefinition
									Height="4" />
								<RowDefinition
									Height="Auto" />
							</Grid.RowDefinitions>
							<TextBlock
								Text="Sounds are for certain client events.  You can either have the computer beep one or more times or play a file from your computer."
								TextWrapping="WrapWithOverflow"
								Grid.ColumnSpan="3" />
							<!--TODO: Add the controls to choose a sound to play-->
							<Label
								Content="Channel Chat: "
								Grid.Row="2" />
							<Label
								Content="Channel Event: "
								Grid.Row="4" />
							<Label
								Content="Channel Stalk: "
								Grid.Row="6" />
							<Label
								Content="Channel Start: "
								Grid.Row="8" />
							<Label
								Content="User Chat: "
								Grid.Row="10" />
							<Label
								Content="User Start: "
								Grid.Row="12" />
						</Grid>
					</GroupBox>
				</Grid>
			</TabItem>
			<TabItem
				Header="_Appearance"
				Margin="0,0,0,0"
				IsTabStop="False">
				<StackPanel
					Orientation="Vertical">
					<GroupBox
						Header="_Conference Mode">
						<Grid
							Margin="4,0,4,0">
							<Grid.ColumnDefinitions>
								<ColumnDefinition
									Width="Auto" />
								<ColumnDefinition
									Width="4" />
								<ColumnDefinition
									Width="Auto"
									MinWidth="100" />
								<ColumnDefinition />
							</Grid.ColumnDefinitions>
							<Grid.RowDefinitions>
								<RowDefinition
									Height="Auto" />
								<RowDefinition
									Height="4" />
								<RowDefinition
									Height="Auto" />
								<RowDefinition
									Height="4" />
								<RowDefinition
									Height="Auto" />
							</Grid.RowDefinitions>
							<Label
								Content="Limit: "
								HorizontalContentAlignment="Right" />
							<Ctrls:IntegerUpDown
								Grid.Column="2" />
							<CheckBox
								Content="Collapse Actions When Collapsing Messages"
								Grid.Row="2"
								Grid.ColumnSpan="4" />
							<CheckBox
								Content="Collapse Messages"
								Grid.Row="4"
								Grid.ColumnSpan="4" />
						</Grid>
					</GroupBox>
					<GroupBox
						Header="Font">
						<Grid
							Margin="4,0,4,0">
							<Grid.ColumnDefinitions>
								<ColumnDefinition
									Width="Auto" />
								<ColumnDefinition
									Width="4" />
								<ColumnDefinition
									Width="Auto" />
								<ColumnDefinition
									Width="4" />
								<ColumnDefinition
									Width="150" />
								<ColumnDefinition />
							</Grid.ColumnDefinitions>
							<Grid.RowDefinitions>
								<RowDefinition
									Height="Auto" />
								<RowDefinition
									Height="4" />
								<RowDefinition
									Height="Auto" />
								<RowDefinition
									Height="4" />
								<RowDefinition
									Height="Auto" />
								<RowDefinition
									Height="4" />
								<RowDefinition
									Height="Auto" />
							</Grid.RowDefinitions>
							<Label
								Content="Normal Family: "
								HorizontalContentAlignment="Right" />
							<CheckBox
								Content="Override theme"
								x:Name="chkFontNormalFamily"
								Grid.Column="2" />
							<Ctrls:FontSelectionComboBox
								x:Name="fscbFontNormalFamily"
								Grid.Column="4"
								IsEnabled="{Binding IsChecked, ElementName=chkFontNormalFamily, NotifyOnSourceUpdated=True}"
								Grid.ColumnSpan="2" />
							<Label
								Content="Fixed Width Family: "
								HorizontalContentAlignment="Right"
								Grid.Row="2" />
							<CheckBox
								Content="Override theme"
								x:Name="chkFontFixedWidthFamily"
								Grid.Column="2"
								Grid.Row="2" />
							<Ctrls:FontSelectionComboBox
								x:Name="cbFontFixedWidthFamily"
								ListOnlyFixedWidthFonts="True"
								Grid.Column="4"
								IsEnabled="{Binding IsChecked, ElementName=chkFontFixedWidthFamily, NotifyOnSourceUpdated=True}"
								Grid.Row="2"
								Grid.ColumnSpan="2" />
							<Label
								Content="Size: "
								Grid.Row="4"
								HorizontalContentAlignment="Right" />
							<CheckBox
								x:Name="chkFontSize"
								Content="Override Theme"
								Grid.Row="4"
								Grid.Column="2" />
							<Ctrls:IntegerUpDown
								Grid.Row="4"
								Grid.Column="4"
								IsEnabled="{Binding IsChecked, ElementName=chkFontSize, NotifyOnSourceUpdated=True}" />
							<Label
								Content="Weight: "
								Grid.Row="6"
								HorizontalContentAlignment="Right" />
							<CheckBox
								x:Name="chkFontWeight"
								Content="Override Theme"
								Grid.Row="6"
								Grid.Column="2" />
							<Ctrls:FontWeightComboBox
								Name="fcbFontWeight"
								Grid.Row="6"
								Grid.Column="4"
								IsEnabled="{Binding IsChecked, ElementName=chkFontWeight, NotifyOnSourceUpdated=True}" />
						</Grid>
					</GroupBox>
					<GroupBox
						Header="_Time Stamps"
						Margin="4,0,4,0">
						<Grid>
							<Grid.ColumnDefinitions>
								<ColumnDefinition
									Width="40" />
								<ColumnDefinition
									Width="Auto" />
								<ColumnDefinition
									Width="4" />
								<ColumnDefinition />
							</Grid.ColumnDefinitions>
							<Grid.RowDefinitions>
								<RowDefinition
									Height="Auto" />
								<RowDefinition
									Height="4" />
								<RowDefinition
									Height="Auto" />
								<RowDefinition
									Height="4" />
								<RowDefinition
									Height="Auto" />
							</Grid.RowDefinitions>
							<RichTextBox
								MinWidth="10"
								IsUndoEnabled="False"
								AllowDrop="False"
								IsHitTestVisible="False"
								Focusable="False"
								IsTabStop="False"
								BorderThickness="0"
								Grid.ColumnSpan="4">
								<FlowDocument>
									<Paragraph
										TextIndent="10">The Format preference uses .NET replacements.  See
										<Hyperlink
											Foreground="Blue"
											FontWeight="Bold"
											NavigateUri="https://learn.microsoft.com/en-us/dotnet/standard/base-types/standard-timespan-format-strings">Standard TimeSpan format strings</Hyperlink> and
										<Hyperlink
											NavigateUri="https://learn.microsoft.com/en-us/dotnet/standard/base-types/custom-timespan-format-strings"
											Foreground="Blue"
											FontWeight="Bold">Custom TimeSpan format strings</Hyperlink> for how to format the value and some sample format strings.
									</Paragraph>
								</FlowDocument>
							</RichTextBox>
							<CheckBox
								x:Name="cbShowTimeStamps"
								Content="_Show the time stamp"
								Grid.Row="2"
								Grid.ColumnSpan="3"
								Grid.Column="1" />
							<Label
								Content="Format: "
								Grid.Row="4"
								Grid.Column="1"
								HorizontalContentAlignment="Right"
								IsEnabled="{Binding IsEnabled, ElementName=editTimeStampFmt, NotifyOnSourceUpdated=True}" />
							<TextBox
								x:Name="editTimeStampFmt"
								Grid.Row="4"
								Grid.Column="5"
								IsEnabled="{Binding IsChecked, ElementName=cbShowTimeStamps, NotifyOnSourceUpdated=True}" />
						</Grid>
					</GroupBox>
					<GroupBox
						Header="User _List">
						<Grid>
